{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],          
    "allowJs": true,                                
    "jsx": "react-jsx",                              
    "noEmit": true,                                 
    "strict": true,                                    
    "moduleResolution": "node10",                   
    "resolveJsonModule": true,                      
    "isolatedModules": true,                        
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                               
  },
  "include": ["src"]
}
